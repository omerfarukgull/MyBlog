@using MyBlog.Entities.Concrete;
@model IEnumerable<Blog>


@foreach (var item in Model)
{
    <div class="item px-2">
     
            <div class="fh5co_latest_trading_img_position_relative">
                <div class="fh5co_latest_trading_img">
                    <img src="~/img/@item.ImgUrl" width="480px" height="320px" alt="" class="fh5co_img_special_relative" />
                </div>
                <div class="fh5co_latest_trading_img_position_absolute"></div>
                <div class="fh5co_latest_trading_img_position_absolute_1">
                    <a asp-controller="Home" asp-action="BlogDetails" asp-route-url="@item.Url" class="text-white">@item.Title</a>
                    <div class="fh5co_latest_trading_date_and_name_color">@item.CreateDate.ToString("MMM dd.yyyy") </div>
                </div>
            </div>
        
    </div>
}

