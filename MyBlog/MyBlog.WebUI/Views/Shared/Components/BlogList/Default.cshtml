@using MyBlog.Entities.Concrete;
@model IEnumerable<Blog>


<div class="row pb-4 mt-3">
    @foreach (var item in Model)
    {
        <div class="col-md-5 mt-3">
            <div class="fh5co_hover_news_img">
                <div class="fh5co_news_img">
                    <img src="~/img/@item.ImgUrl" width="480px" height="320px" alt="" />
                </div>
                <div></div>
            </div>

        </div>
        <div class="col-md-7 mt-3 animate-box">
            <a asp-controller="Home" asp-action="BlogDetails" asp-route-url="@item.Url" class="fh5co_magna  py-2">
                @item.Title
            </a><br>
            <p class="fh5co_mini_time py-3">
                @item.CreateDate.ToString("dd.MM.yyyy")
            </p><br>
            <div class="fh5co_consectetur">
                @item.Description
            </div>
        </div>
    }
</div>
